<% if logged_in? %>
  <script type="text/javascript">
    window.currentUser = <%= render(
      "api/users/user.json.jbuilder",
      user: current_user
    ).html_safe %>
  </script>
  <script type="text/javascript">
    window.currentTeamId = <%= render(
      "api/teams/team.json.jbuilder",
      team: current_user.teams.first
    ).html_safe %>
  </script>
<% end %>

<main id="root"></main>
